<%- include('../partials/head.ejs') %>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">
   <nav class="fixed top-0 left-0 w-full bg-white shadow z-50">
    <div class="max-w-7xl mx-auto px-4 py-3 flex justify-between items-center">
      <div class="text-2xl font-bold text-blue-600">MobileShop</div>
      <ul class="flex space-x-6 font-medium">
        <li><a href="/" class="hover:text-blue-600">Home</a></li>
        <li><a href="/signin" class="hover:text-blue-600">Sign In</a></li>
      </ul>
    </div>
  </nav>
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-sm">
    <h1 class="text-2xl font-bold text-center text-blue-700 mb-6">Login</h1>
    <form action="/login" method="POST" class="space-y-5">
      <div>
        <label class="block font-medium mb-1">Username</label>
        <input type="text" name="username" required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400">
      </div>
      <div>
        <label class="block font-medium mb-1">Password</label>
        <input type="password" name="password" required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400">
      </div>
      <button type="submit" class="w-full bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition font-semibold">Login</button>
    </form>
  </div>
</body>
</html>