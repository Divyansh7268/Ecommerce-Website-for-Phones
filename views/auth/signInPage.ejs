<%- include('../partials/head.ejs') %>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">


 <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
  <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
    <ul class="list-disc list-inside">
      <% errors.forEach(function(error) { %>
        <li><%= error %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <h1 class="text-2xl font-bold text-center text-blue-700 mb-6">Sign Up</h1>
    <form action="/signin" method="POST" class="space-y-5">
      <div class="flex gap-4">
        <div class="w-1/2">
          <label class="block font-medium mb-1">First Name</label>
          <input type="text" name="firstName" value="<%=oldInput.firstName ? oldInput.firstName : '' %>" required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400">
        </div>
        <div class="w-1/2">
          <label class="block font-medium mb-1">Last Name</label>
          <input type="text" name="lastName" value="<%=oldInput.lastName ? oldInput.lastName : '' %>" required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400">
        </div>
      </div>
      <div>
         <label class="block font-medium mb-1">Email</label>
        <input type="email" name="email" value="<%=oldInput.email ? oldInput.email : '' %>" required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400">
      </div>
      <div>
        <label class="block font-medium mb-1">Password</label>
        <input type="password" name="password" value="<%=oldInput.password ? oldInput.password : '' %>" required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400">
      </div>
      <div>
        <label class="block font-medium mb-1">Confirm Password</label>
        <input type="password" name="confirmPassword"  required class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400">
      </div>
      <div>
        <span class="block font-medium mb-1">User Type</span>
        <div class="flex gap-6">
          <label class="inline-flex items-center">
            <input type="radio" name="userType" value="guest" required class="form-radio text-blue-600">
            <span class="ml-2">Guest User</span>
          </label>
           <label class="inline-flex items-center">
            <input type="radio" name="userType" value="host" required class="form-radio text-blue-600">
            <span class="ml-2">Host User</span>
          </label>
        </div>
      </div>
      <div>
        <label class="inline-flex items-center">
          <input type="checkbox" name="terms" required class="form-checkbox text-blue-600">
          <span class="ml-2 text-gray-700">I agree to the terms and conditions</span>
        </label>
      </div>
      <button type="submit" class="w-full bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition font-semibold">Sign Up</button>
    </form>
  </div>
</body>
</html>